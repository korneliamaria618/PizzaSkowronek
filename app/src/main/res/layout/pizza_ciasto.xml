<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4C2C2"> <TextView
    android:id="@+id/ciasto"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginTop="60dp"
    android:layout_marginEnd="32dp"
    android:text="WYBIERZ RODZAJ CIASTA:"
    android:textAlignment="center"
    android:textColor="#D11D5D"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cienkie"
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#D11D5D"
        android:onClick="CienkieCiasto"
        android:text="CIASTO CIENKIE"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ciasto" />

    <Button
        android:id="@+id/puszyste"
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#880E4F"
        android:onClick="GrubeCiasto"
        android:text="CIASTO GRUBE"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cienkie" />

</androidx.constraintlayout.widget.ConstraintLayout>